---
import ProjectItem from "./projectItem.astro"
import { colors, backgroundPatterns } from "../styleConstants";
import { content } from "../content";
---

<section>
	<h1>
		<span class="top">Hi, I'm</span>
		<span class="middle">Clikuki</span>
		<span class="bottom">and welcome to my website! </span>
	</h1>
	
	<div class="shortcuts">
		<a data-collidable="true" href="#projects">My Projects</a><br/>
		<a data-collidable="true" href="#about">About Me</a>
	</div>
	
	<img class="cookie" src="pixel_cookie.png" alt="A big cookie?" draggable="false">
	
	<ul class="highlights">
		{content.projects.map(proj => {
			if(proj.isHighlight) return (<li data-collidable>
				<ProjectItem
					title={proj.title}
					thumbnailSrc={proj.thumbnailSrc}
					projectSrc={proj.projectSrc}
				/>
			</li>)
		})}
	</u>
	
	<div class="cookie-bits"></div>
</section>

<script src="../physics/core.ts"></script>

<style define:vars={{"bg-pattern": `url("${backgroundPatterns.whirl(colors.darker, .3)}")`}}>
	section {
		height: 100vh;
		padding: 1rem;
		display: grid;
		grid-template-areas:
			"header cookie display"
			"shortcuts cookie display";
		grid-template-rows: max-content 1fr;
		grid-template-columns: max-content 1fr 1fr;
		column-gap: 0.5rem;

		background-image:
			linear-gradient(
				to bottom,
				color-mix(in oklab, var(--white) 90%, transparent),
				transparent,
				color-mix(in oklab, var(--light) 70%, transparent)
			),
			var(--bg-pattern);
	}

	h1 {
		grid-area: header;
		display: flex;
		width: fit-content;
		flex-direction: column;
		font-weight: normal;
		font-size: 1rem;
		margin: 0;
	}
	h1 .middle {
		font-size: 5em;
		line-height: 4rem;
		padding: 0 1rem;
	}
	h1 .top,
	h1 .bottom {
		text-wrap: nowrap;
		display: flex;
		align-items: center;
		font-size: 1em;
		gap: 1ch;
	}
	h1 .top::after,
	h1 .bottom::before {
		content: "";
		width: 100%;
		height: 2px;
		background-color: var(--darker);
		border-radius: 1rem;
		flex-grow: 1;
	}

	.shortcuts {
		grid-area: shortcuts;
		margin-top: 3rem;
	}
	.shortcuts a {
		display: inline-block;
		text-decoration: none;
		color: inherit;
		border-radius: .2rem;
		background-color: var(--light);
		box-shadow: .3rem .3rem var(--darker);
		font-size: 1.3rem;
		margin: 1rem 0 0 2rem;
		padding: 1rem 2rem;
		transition: translate 500ms;
	}
	.shortcuts a:hover {
		translate: 1rem 0;
	}
	
	.cookie {
		grid-area: cookie;
		align-self: center;
		justify-self: center;
		position: relative;
		width: 100%;
		max-width: 26rem;
		aspect-ratio: 1;
		image-rendering: crisp-edges;
		border-radius: 33%;
		user-select: none;
	}
	.cookie.js-enabled {
		cursor: pointer;
		transition: scale 500ms;
	}
	.cookie.js-enabled:hover {
		scale: 1.03;
	}
	.cookie.shake {
		animation: shake 300ms ease-in-out;
	}
	@keyframes shake {
		0% {
			rotate: 0deg;
		}
		20% {
			rotate: 3deg;
		}
		70% {
			rotate: -3deg;
		}
		90% {
			rotate: 1deg;
		}
		100% {
			rotate: 0deg;
		}
	}

	.cookie-bits {
		position: absolute;
		top: 0;
		left: 0;
	}
	.cookie-bits :global(img) {
		position: absolute;
		width: 1rem;
		aspect-ratio: 1;
		user-select: none;
		pointer-events: none;
	}
	
	.highlights {
		list-style: none;
		grid-area: display;
		display: grid;
		grid-template-columns: repeat(2, 50%);
		grid-template-rows: repeat(2, 50%);
		align-items: flex-end;
		gap: 1.5rem 1rem;
		padding: 0;
		margin: 0;
	}
	.highlights > :global(:nth-child(1)) {
		justify-self: flex-end;
	}
	.highlights > :global(:nth-child(2)) {
		justify-self: flex-start;
	}
	.highlights > :global(:nth-child(3)) {
		grid-column: 1 / 3;
		align-self: flex-start;
		justify-self: center;
	}
</style>