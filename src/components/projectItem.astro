---
interface Props {
	title: string;
	projectSrc: string;
	thumbnailSrc: string;
}

const { title, projectSrc, thumbnailSrc } = Astro.props;
---

<li>
	<a href={projectSrc}>
		<img src={thumbnailSrc} alt={title}>
		<span>{title}</span>
	</a>
</li>

<style>
	a {
		display: grid;
		grid-template-areas: "sole";
		align-items: center;
		justify-items: center;
		width: var(--size, 10rem);
		aspect-ratio: 1;
		overflow: hidden;
		border-radius: .3rem;
		color: white;
		text-decoration: none;
		box-shadow: .3rem .3rem var(--c-dark);
		isolation: isolate;
		transition: box-shadow 500ms;
	}
	img {
		grid-area: sole;
		width: 100%;
		aspect-ratio: 1;
		z-index: 1;
		transition: scale 500ms, filter 500ms;
	}
	span {
		grid-area: sole;
		opacity: 0;
		z-index: 2;
		transition: opacity 500ms;
	}
	a:hover {
		box-shadow: .3rem .3rem var(--c-darker);
	}
	a:hover img {
		scale: 1.3;
		filter: brightness(.2);
	}
	a:hover span {
		opacity: 1;
	}
</style>